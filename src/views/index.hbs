<h1>Browse</h1>
<form action='' method=''>
  <input type='text' class='search' name='search' placeholder='Search...' />
  <input
    type='number'
    name='from'
    class='difficulty'
    placeholder='Difficulty from...'
  />
  <span>-</span>
  <input
    type='number'
    name='to'
    class='difficulty'
    placeholder='Difficulty to...'
  />
  <input type='submit' value='search' />
</form>
{{#if hasCubes}}
  {{#each cubes}}
    <div class='cube'>
      <img class='cube' src='{{imageUrl}}' />
      <p class='name'>{{name}}</p>
      <p><span>Difficulty level:</span> {{difficultyLevel}}</p>
      <a class='btn' href='/cubes/details/{{_id}}'>Details</a>
    </div>
  {{/each}}
{{else}}
  <h1>No Cubes Added!</h1>
{{/if}}